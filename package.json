{
	"name": "svelte-theme-select",
	"version": "0.1.2",
	"type": "module",
	"keywords": [
		"svelte",
		"theme",
		"mode",
		"light",
		"dark",
		"prefers-color-scheme"
	],
	"homepage": "https://captaincodeman.github.io/svelte-theme-select/",
	"repository": {
		"type": "git",
		"url": "https://github.com/captaincodeman/svelte-theme-select.git"
	},
	"author": {
		"name": "Simon Green",
		"email": "simon@captaincodeman.com",
		"url": "https://www.captaincodeman.com/"
	},
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"sync": "svelte-kit sync",
		"build": "vite build",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.46.4",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.14",
		"autoprefixer": "^10.4.21",
		"publint": "^0.3.14",
		"svelte": "^5.39.11",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.14",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"vite": "^7.1.9"
	},
	"dependencies": {
		"esm-env": "^1.2.2",
		"svelte-headlessui": "^0.0.46",
		"svelte-transition": "^0.0.17"
	}
}