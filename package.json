{
	"name": "svelte-theme-select",
	"version": "0.0.7",
	"type": "module",
	"keywords": [
		"svelte",
		"theme",
		"mode",
		"light",
		"dark",
		"prefers-color-scheme"
	],
	"homepage": "https://captaincodeman.github.io/svelte-theme-select/",
	"repository": {
		"type": "git",
		"url": "https://github.com/captaincodeman/svelte-theme-select.git"
	},
	"author": {
		"name": "Simon Green",
		"email": "simon@captaincodeman.com",
		"url": "https://www.captaincodeman.com/"
	},
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"sync": "svelte-kit sync",
		"build": "vite build",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"peerDependencies": {
		"svelte": "^3.54.0 || ^4.0.0 || ^5.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.5",
		"@sveltejs/kit": "^2.7.2",
		"@sveltejs/package": "^2.3.6",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"autoprefixer": "^10.4.20",
		"postcss": "^8.4.47",
		"postcss-load-config": "^6.0.1",
		"publint": "^0.2.12",
		"svelte": "^4.2.19",
		"svelte-check": "^3.8.6",
		"tailwindcss": "^3.4.14",
		"tslib": "^2.8.0",
		"typescript": "^5.6.3",
		"vite": "^5.4.10"
	},
	"dependencies": {
		"esm-env": "^1.0.0",
		"svelte-headlessui": "^0.0.43",
		"svelte-transition": "^0.0.17"
	}
}